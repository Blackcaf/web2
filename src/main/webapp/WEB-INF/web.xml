<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
         http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <display-name>Web Lab 2</display-name>

    <!-- Фильтры -->
    <!-- Фильтр контроля доступа - блокирует все кроме разрешенных URL -->
    <filter>
        <filter-name>AccessControlFilter</filter-name>
        <filter-class>com.nlshakal.filters.AccessControlFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>AccessControlFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <!-- Фильтр проверки HTTP методов -->
    <filter>
        <filter-name>MethodFilter</filter-name>
        <filter-class>com.nlshakal.filters.MethodFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>MethodFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <!-- Фильтр валидации параметров -->
    <filter>
        <filter-name>ValidationFilter</filter-name>
        <filter-class>com.nlshakal.filters.ValidationFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>ValidationFilter</filter-name>
        <url-pattern>/controller</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>ValidationFilter</filter-name>
        <url-pattern>/areaCheck</url-pattern>
    </filter-mapping>

    <!-- Конфигурация ControllerServlet -->
    <servlet>
        <servlet-name>ControllerServlet</servlet-name>
        <servlet-class>com.nlshakal.servlets.ControllerServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ControllerServlet</servlet-name>
        <url-pattern>/controller</url-pattern>
    </servlet-mapping>

    <!-- Конфигурация AreaCheckServlet -->
    <servlet>
        <servlet-name>AreaCheckServlet</servlet-name>
        <servlet-class>com.nlshakal.servlets.AreaCheckServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AreaCheckServlet</servlet-name>
        <url-pattern>/areaCheck</url-pattern>
    </servlet-mapping>

    <!-- Конфигурация ClearHistoryServlet -->
    <servlet>
        <servlet-name>ClearHistoryServlet</servlet-name>
        <servlet-class>com.nlshakal.servlets.ClearHistoryServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ClearHistoryServlet</servlet-name>
        <url-pattern>/clearHistory</url-pattern>
    </servlet-mapping>

    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>

    <!-- Блокируем прямой доступ к JSP страницам из WEB-INF -->
    <security-constraint>
        <web-resource-collection>
            <web-resource-name>JSP Pages</web-resource-name>
            <url-pattern>/WEB-INF/*</url-pattern>
        </web-resource-collection>
        <auth-constraint/>
    </security-constraint>
</web-app>
