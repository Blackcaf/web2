<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
         http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <display-name>Web Lab 2</display-name>

    <filter>
        <filter-name>AccessControlFilter</filter-name>
        <filter-class>com.nlshakal.filters.AccessControlFilter</filter-class>
        <init-param>
            <param-name>allowedPaths</param-name>
            <param-value>/,/index.jsp,/controller,/clearHistory,/weather,/styles.css,/script.js,/canvas.js</param-value>
        </init-param>
    </filter>
    <filter-mapping>
        <filter-name>AccessControlFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <filter>
        <filter-name>MethodFilter</filter-name>
        <filter-class>com.nlshakal.filters.MethodFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>MethodFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <filter>
        <filter-name>ValidationFilter</filter-name>
        <filter-class>com.nlshakal.filters.ValidationFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>ValidationFilter</filter-name>
        <url-pattern>/controller</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>ValidationFilter</filter-name>
        <url-pattern>/areaCheck</url-pattern>
    </filter-mapping>

    <servlet>
        <servlet-name>ControllerServlet</servlet-name>
        <servlet-class>com.nlshakal.servlets.ControllerServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ControllerServlet</servlet-name>
        <url-pattern>/controller</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>AreaCheckServlet</servlet-name>
        <servlet-class>com.nlshakal.servlets.AreaCheckServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AreaCheckServlet</servlet-name>
        <url-pattern>/areaCheck</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ClearHistoryServlet</servlet-name>
        <servlet-class>com.nlshakal.servlets.ClearHistoryServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ClearHistoryServlet</servlet-name>
        <url-pattern>/clearHistory</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>WeatherServlet</servlet-name>
        <servlet-class>com.nlshakal.servlets.WeatherServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>WeatherServlet</servlet-name>
        <url-pattern>/weather</url-pattern>
    </servlet-mapping>

    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>

    <security-constraint>
        <web-resource-collection>
            <web-resource-name>Protected JSP Pages</web-resource-name>
            <url-pattern>/result.jsp</url-pattern>
            <url-pattern>/error.jsp</url-pattern>
        </web-resource-collection>
        <auth-constraint>
        </auth-constraint>
    </security-constraint>

    <security-constraint>
        <web-resource-collection>
            <web-resource-name>Internal Servlets</web-resource-name>
            <url-pattern>/areaCheck</url-pattern>
        </web-resource-collection>
        <auth-constraint>
        </auth-constraint>
    </security-constraint>

    <security-constraint>
        <web-resource-collection>
            <web-resource-name>WEB-INF Directory</web-resource-name>
            <url-pattern>/WEB-INF/*</url-pattern>
        </web-resource-collection>
        <auth-constraint/>
    </security-constraint>
</web-app>
